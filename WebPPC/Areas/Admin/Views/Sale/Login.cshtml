@{
    ViewBag.Title = "Login";
    Layout = "";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Đăng nhập </title>

    <link href="~/Content/stylead.css" rel="stylesheet" />

</head>

<body>
    <div class="login-page">
        <div class="form">
            <p>
                @if (ViewBag.mgs != null)
                {
                    <h1>@ViewBag.mgs</h1>    }
            </p>
            <form class="login-form" action="/Sale/Login" method="post">
                <input type="text" placeholder="Tên đăng nhập" name="email" required />
                <input type="password" placeholder="Mật khẩu" name="password" required />
                <button type="submit">Đăng nhập</button>

            </form>
        </div>
    </div>
    <script src="~/Scripts/loginadjquery.minl.js"></script>


</body>
</html>
