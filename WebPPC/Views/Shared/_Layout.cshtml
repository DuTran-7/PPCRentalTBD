    <link href="~/Content/agency.min.css" rel="stylesheet" />

</head>

<body id="page-top">

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="/Project/Index">
                <img src="~/img/logo.png" width="40px" />
            </a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ml-auto">
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Project/Index">Trang chủ</a>
                    </li>
                  
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Project/SearchI">Tìm kiếm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="http://localhost:50775/Project/AboutUS">Lịch sử</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#about">Sự kiện</a>
                    </li>
                    @if (Session["UserID"] != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Project/PostProject">Đăng bài</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Agency/Login">Đăng bài</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Project/Contact">Liên hệ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Project/Contact">    </a>
                    </li>
                    @if (Session["UserID"] == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Agency/Login">Đăng nhập</a>
                        </li>
                    }
                    else
                    {
                            <li class="nav-item dropdown ">
                                <a href="#" class="dropdown-toggle nav-link js-scroll-trigger" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Chào, @Session["FullName"]<span class="caret"></span></a>
                                <ul class="dropdown-menu" style="font-size: 13px; color:white;background-color:black">
                                    <li><a href="/Project/List"> &nbsp;&nbsp;&nbsp; Dự án của tôi</a></li>&nbsp;
                                    <li><a href="/Agency/ChangePw">&nbsp;&nbsp;  Đổi mật khẩu</a></li>&nbsp;
                                    <li><a href="/Agency/Logout">&nbsp;&nbsp;  Đăng xuất</a></li>&nbsp;
                                </ul>
                            </li>
                    }

                    <li class="nav-item">

                    </li>

                </ul>
            </div>
        </div>
    </nav>


    <header class="masthead">
        <div class="container">
            <div class="intro-text">
            </div>
        </div>
    </header>


    @RenderBody()



    <hr style="text-decoration:double;width:70%;" color="black" />

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">

                <div class="col-md-4">
                    <h2>Perfect Property Company VietNam</h2>
                


                </div>
                <div class="col-md-4">
                    <p><strong>Address: </strong>3rd floor, Jabes 1, 244 Cong Quynh street, Pham Ngu Lao ward, District 1, Ho Chi Minh City </p>
                    <a href="https://twitter.com/">
                        <img src="~/img/icontwitter.png" width="40" height="40" />
                    </a>
                    <a href="https://facebook.com/">
                        <img src="~/img/iconfacebook.png" width="40" height="40" />
                    </a>


                    <a href="https://instagram.com/">
                        <img src="~/img/iconig.png" width="40" height="40" />
                    </a>

                    <a href="https://youtube.com/">
                        <img src="~/img/iconyoutube.png" width="40" height="40" />
                    </a>
                </div>
                <div class="col-md-4">
                    <p><strong>Phone:</strong> 096 420 0531   </p>
                    <p> <strong> Hotline:</strong> 092 029 756</p>

                </div>
            </div>
        </div>

    </footer>

    <!-- Portfolio Modals -->
    <!-- Bootstrap core JavaScript -->

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <!-- Plugin JavaScript -->

    <script src="~/Scripts/jquery.easing.min.js"></script>
    <!-- Contact form JavaScript -->

    <script src="~/Scripts/jqBootstrapValidation.js"></script>
    <script src="~/Scripts/contact_me.js"></script>
    <!-- Custom scripts for this template -->

    <script src="~/Scripts/agency.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
