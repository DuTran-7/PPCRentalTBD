@model WebPPC.Models.USER
@{
    ViewBag.Title = "ChangePw";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .form-control {
        text-align:center;
    }
</style>
<h2 style="text-align:center">ChangePw</h2>

@if (ViewBag.err != null && ViewBag.errr != null)
{
    <div class="alert alert-success" role="alert" style="text-align:center">@ViewBag.sc </div>
}
<form class="" method="post" action="@Url.Action("ChangePw", "Agency")" style="padding-left:30%;padding-right:30%">
    <br /><br />
    
    @if (ViewBag.err != null)
    {
        <div class="alert alert-danger" role="alert">@ViewBag.err</div>
    }
   
    <div class="form-group " style="text-align:center" >
        <input class="form-control" type="password" name="curPw" placeholder="Current Password" />
    </div>
    @if (ViewBag.errr != null)
    {
        <div class="alert alert-danger" role="alert">@ViewBag.errr</div>
    }
   
    <div style="text-align:center" class="form-group">
        <input type="password" class="form-control" name="newPw" placeholder="New Password"/>

    </div>
    @if (ViewBag.errr != null)
    {
        <div class="alert alert-danger" role="alert">@ViewBag.errr</div>
    }
   
    <div style="text-align:center" class="form-group">
        <input type="password" class="form-control" name="confimNewPw" placeholder="Confirm New Password" />
    </div>
    <input type="submit" class="form-control" value="SUBMIT" name="submit"/>
</form>
<br /><br /><br /><br />