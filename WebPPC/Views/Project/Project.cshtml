@model IEnumerable<WebPPC.Models.PROPERTY>


@{
    ViewBag.Title = "Filter";

}

<style>
    .form-group {
        padding-left: 35%;
    }

    .btn-default {
        margin-left: 48%;
        background-color: #1C1C1C;
        color: white;
        border-radius: 2px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 12px;
        cursor: pointer;
    }

    .button {
        background-color: #1C1C1C;
        color: white;
        border-radius: 2px;
        padding: 12px 22px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 12px;
        margin: 4px 2px;
        cursor: pointer;
    }

    #portfolio {
        padding-top: 0;
    }
</style>

<h2 style="text-align:center;padding-top:25px;padding-bottom:20px;">Search Project</h2>
<form class="filter " role="search" action="@Url.Action("Project","Project")" method="get">


    <div class="form-group form-inline">
        <input type="text" class="form-control" placeholder="Name" name="name">
        &nbsp;
        <input type="text" class="form-control" placeholder="Price" name="price">
    </div>
    <div class="form-group form-inline">
        <input type="text" class="form-control" placeholder="Bedroom" name="bedroom">
        &nbsp;
        <input type="text" class="form-control" placeholder="BathRoom" name="bathroom">
    </div>
    <div class="form-group form-inline">
        <input type="text" class="form-control" placeholder="PackingPlace" name="packingplace">
        &nbsp;
        <input type="text" class="form-control" placeholder="Area" name="area">
    </div>


    <button type="submit" class="btn btn-default">Submit</button>
</form>
<br>

<hr style="width: 30%; text-align: center; " color="black">

<section id="portfolio">

    <div class="container">
        <div class="row">

            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Projects List</h2>
                <h3 class="section-subheading text-muted">Perfect Property Company.</h3>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6 portfolio-item">

                    <div class="portfolio-hover">
                        <div class="portfolio-hover-content">
                            <i class="fa fa-plus fa-3x"></i>
                        </div>
                    </div>

                    <img class="img-fluid" src="/img/@item.Avatar " alt="">
                    <div class="portfolio-caption">
                        <h4>@item.PropertyName.Substring(0, Math.Min(@item.PropertyName.Length, 20))</h4>
                        <p> @item.Content.Substring(0, 50)  ...</p>
                        <strong style="color:red; font-size: 140%">$@item.Price</strong>
                        <br>
                        <a class="button button5" href="/Property/Detail/@item.ID">Detail</a>


                    </div>
                </div>
            }
        </div>
    </div>
</section>
